#! /bin/bash
# Common commands to be sourced by rc files like .bashrc and .zshrc

if [[ $(type -p keychain) ]]; then
    eval $(keychain --eval --ignore-missing --agents ssh -Q --quiet id_rsa_bitbucket id_ecdsa_osgiliath id_ecdsa_khazaddum id_rsa_gandalf id_ecdsa_lothlorien id_rsa_github)
fi

if [[ "$HOSTNAME" == khazaddum ]]; then
    setxkbmap -option terminate:ctrl_alt_bksp
    xmodmap ~/.Xmodmap
fi

case "$HOSTNAME" in
        khazaddum*)
            ~/bin/archey3.py -c green ;;
        lothlorien*)
            ~/bin/archey3.py -c magenta ;;
        osgiliath*)
            ~/bin/archey3.py -c yellow ;;
        esgaroth*)
            ~/bin/archey3.py -c cyan ;;
        *)
            [[ -x ~/bin/archey3.py ]] && ~/bin/archey3.py -c red ;;
esac


